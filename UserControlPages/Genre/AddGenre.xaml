<Window x:Class="Projekt_Tomasz_Roznowski_BookCatalog.UserControlPages.Genre.AddGenre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt_Tomasz_Roznowski_BookCatalog.UserControlPages.Genre"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="AddGenre" Height="150" Width="200">

    <StackPanel Background="#272537">
        <StackPanel.Resources>
            <Style TargetType="{x:Type Label}" >
                <Setter Property="Foreground" Value="WhiteSmoke"></Setter>
            </Style>
        </StackPanel.Resources>
        <Label Margin="0 10 0 0" Width="100">Genre name:</Label>
        <TextBox Margin="0 0 0 10" Width="100" Name="GenreName"></TextBox>
        <Button Name="AddGenreBTN" Click="AddGenreBTN_Click" Width="100" Background="Teal">Add Genre</Button>
    </StackPanel>
</Window>
