<UserControl x:Class="Projekt_Tomasz_Roznowski_BookCatalog.UserControlPages.Author.AuthorPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projekt_Tomasz_Roznowski_BookCatalog.UserControlPages.Author"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <StackPanel>
            <StackPanel.Resources>
                <Style  TargetType="{x:Type TextBlock}">
                    <Setter Property="Foreground" Value="WhiteSmoke" />
                </Style>
            </StackPanel.Resources>
            
                        <TextBlock Text="Author name" />
                        <TextBlock Name ="AuthorName" />

                        <TextBlock Text="Author Surname" />
                        <TextBlock Name="AuthorSurname" />

                        <TextBlock Text="Author Date of birth" />
                        <TextBlock Name="AuthorDate"/>

                        <TextBlock Text="Description" />
                        <TextBlock Name="AuthorDesc"/>


        </StackPanel>

    </Grid>
</UserControl>
