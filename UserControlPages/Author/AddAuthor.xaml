<Window x:Class="Projekt_Tomasz_Roznowski_BookCatalog.UserControlPages.Author.AddAuthor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt_Tomasz_Roznowski_BookCatalog.UserControlPages.Author"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="AddAuthor" Height="280" Width="270">
    <StackPanel Width="200">
        <Label>Name</Label>
        <TextBox Name="AuthorName"></TextBox>
        <Label>Surname</Label>
        <TextBox Name="AuthorSurname"></TextBox>
        <Label>Date of birth</Label>
        <TextBox Name="AuthorDate"></TextBox>
        <Label>Author Description</Label>
        <TextBox Height="50" Name="AuthorDesc"></TextBox>
        <Button Margin="20" Name="AddAuthorBTN" Click="AddAuthorBTN_Click">Add Author</Button>
        
        
    </StackPanel>
</Window>
